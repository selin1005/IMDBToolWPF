<Window x:Class="IMDbToolWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMDbToolWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Grid.Row="3" Grid.Column="3">
            <Label x:Name="lblActorName" Content="Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="textBoxActorName" HorizontalAlignment="Left" Height="26" Margin="57,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="322" KeyUp="textBox_KeyUp"/>
            <Button x:Name="btnFetch" Content="Fetch Movies" HorizontalAlignment="Left" Margin="384,10,0,0" VerticalAlignment="Top" Width="123" Click="btnFetch_Click" Height="26"/>
            <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="57,41,0,0" VerticalAlignment="Top" Width="322" SelectionChanged="comboBox1_SelectionChangeCommitted"/>
            <DataGrid x:Name="dataGridView1" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" SelectionMode="Single" Height="241" Width="497"/>
        </Grid>

    </Grid>
</Window>
